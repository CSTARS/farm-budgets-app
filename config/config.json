{

    "middleware": {
        "static": {
            "module": {
                "arguments": [ "path:./dist" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        },

        "appsec" : {
          "module" : {
            "arguments" : [{
                "csrf" : false
            }]
          }
        }
    },


    "postgres" : {
      "url" : "postgres://username:password@localhost/database",
      "schema" : "farm_budget_data"
    },

    "mongo" : {
      "database" : "farmBudgets",
      "url" : "mongodb://localhost:27017/"
    },

    "auth" : {
      "redirect" : "/login.html",
      "url" : "http://localhost:3021",
      "sessionSecret" : "thisisnotasecret",
      "google" : "/etc/farm-budgets-app/google"
    }
}
